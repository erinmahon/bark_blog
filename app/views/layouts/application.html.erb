<!DOCTYPE html>
<html>
<head>
  <title>Bark</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="notice"><%= flash[:notice] if flash[:notice] %></div>
	<div id="alert"><%= flash[:alert] if flash[:alert] %></div>
	<div id="header">
		<img id="logo" src="/assets/bark_logo_2.png" height="100px">
		<nav>
			<ul>
			  <% if current_user %>
				<li><%= link_to 'Log Out', logout_path, method: :delete %></li>
				<li><%= link_to 'Edit Info', edit_profile_path %></li>
				<li><%= link_to 'New Bark', new_post_path %></li>
				<div class="icon">
			      <%= link_to image_tag("bark_icon.png", height: "35px"), posts_path(session[:user_id]) %>
    			  <%= link_to image_tag("search_icon.png", :style => "padding-bottom: 6px", height: "25px"), users_path %>
    		      <%= link_to image_tag("home_icon.png", height: "35px"), user_path(session[:user_id]) %>
    		    </div>
    		    <li id="hello">Hello <%= current_user.fname %>!</li>
			  <% else %>
				<li><%= link_to 'Sign In', login_path %></li>
				<li><%= link_to 'Sign Up', new_user_path %></li>
			  <% end %>
			</ul>
		</nav>
	</div>
	<div id="main">
	  <%= yield %>
	</div>
</body>
</html>
